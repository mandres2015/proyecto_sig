<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Ferreteria Don Castro</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/fontawesome/css/all.css">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="component-fliud">
        <div class="row justify-content-center align-items-center h-100vh">
            <div class="col-12 py-4" style="background-color: #eeeeee;">
                <div class="row mx-auto ">
                    <div class="col-12 col-lg-10 mx-auto">
                        <div class="col-12 bg-login d-flex" style="height:100px;">
                            <div class="col-12 d-flex">
                                <img class="mx-auto" src="/img/logo-login.png" alt="" height="100%" width="auto">
                            </div>
                        </div>
                        <div class="col-12 bg-white d-flex">
                            <form class="form-group my-auto" action="/register" method="POST" id="registerForm"
                                autocomplete="off">
                                <div class="row py-4">
                                    <h1 class="col-12 h2 text-center font-color-castro mb-2">REGISTRO</h1>
                                    <div class="col-12 col-lg-6">
                                        <div class="row">
                                            <label class="col-12">
                                                CEDULA
                                                <input type="text" name="dni" class="form-control" required autofocus>
                                            </label>
                                            <label class="col-12">
                                                NOMBRE
                                                <input type="text" name="name" class="form-control" required>
                                            </label>
                                            <label class="col-12">
                                                APELLIDOS
                                                <input type="text" name="lastName" class="form-control" required>
                                            </label>
                                            <label class="col-12">
                                                DIRECCION
                                                <input type="text" name="address" class="form-control" required>
                                            </label>
                                            <label class="col-12">
                                                TELEFONO
                                                <input type="text" name="phone" class="form-control" required>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-12 col-lg-6">
                                        <div class="row">
                                            <label class="col-12">
                                                CORREO
                                                <input type="email" name="email" class="form-control" required>
                                            </label>
                                            <label class="col-12">
                                                USUARIO
                                                <input type="text" name="user" class="form-control" required>
                                            </label>
                                            <label class="col-12">
                                                CLAVE
                                                <input type="password" name="pass" class="form-control" required>
                                            </label>
                                            <label class="col-12">TIPO DE USUARIO
                                                <select name="typeUser" id="typeUser" class="custom-select">
                                                    <option value="admin">Administrador</option>
                                                    <option value="cashier" selected>Cajero</option>
                                                    <option value="other">Personal</option>
                                                </select>
                                            </label>
                                            <label class="col-12">SUCURSAL
                                                <select name="sucursal" id="sucursal" class="custom-select">
                                                    <% for(var i=0; i < sucursales.length; i++) { %>
                                                    <option value="<%= sucursales[i][0] %>"><%= sucursales[i][0] %>
                                                    </option>
                                                    <% } %>
                                                </select>
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="row">
                                            <input class="mt-3 btn-white btn-lg btn-outline-danger mx-auto"
                                                type="button" name="btnCancel" id="btnCancel" value="CANCELAR"
                                                onclick="location.href='/'">
                                            <input class="mt-3 btn-white btn-lg btn-outline-success mx-auto"
                                                type="submit" name="btnLogin" id="btnLogin" value="REGISTRAR">
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="modalmsg"></div>
    <% include complements %>
    <script src="/js/login-reg.js"></script>
    <% include footer %>